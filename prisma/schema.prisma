generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Size {
  XS
  S
  M
  L
  XL
  XXL
}

enum Gender {
  men
  women
  kid
  unisex
}

model Category {
  id   String @id @default(uuid())
  name String @unique

  // relacion con la tabla Pro
  Product Product[]
}
model Product {
  id          String   @id @default(uuid())
  title       String
  description String
  inStock     Int
  price       Float    @default(0)
  sizes       Size[]
  slug        String   @unique
  tags        String[]
  gender      Gender[]

  ProductImage ProductImage[]

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String

  @@index([gender])
}

model ProductImage {
  id  Int    @id @default(autoincrement())
  url String

  product   Product @relation(fields: [productID], references: [id])
  productID String
}
